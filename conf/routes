# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file               controllers.Assets.at(path="/public", file)

# Swagger - Root Resources Listing
GET         /api-docs                   controllers.ApiHelpController.getResources

#user
GET         /api-docs/users             controllers.ApiHelpController.getResource(path = "/users")
GET         /users/:id/followers        controllers.UserController.getFollowersById(id: Int)
GET         /users/:id                  controllers.UserController.getById(id: Int)
POST        /users/:number              controllers.UserController.createUsers(number: Int)
DELETE      /users                      controllers.UserController.deleteAllUsers


#tweets
GET         /api-docs/tweets            controllers.ApiHelpController.getResource(path = "/tweets")
GET         /tweets/:id/user/:userid    controllers.TweetController.getTweeetsByUserId(id: Int, userid: Int)
GET         /tweets/:id                 controllers.TweetController.getById(id: Int)
POST        /users/:number              controllers.TweetController.createTweets(number: Int)
DELETE      /users                      controllers.TweetController.deleteAllTweets
